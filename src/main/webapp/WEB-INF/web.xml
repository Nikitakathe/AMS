<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>CustomerRegister</servlet-name>
        <servlet-class>auction.CustomerRegister</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustomerLogin</servlet-name>
        <servlet-class>auction.CustomerLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>bidRegister</servlet-name>
        <servlet-class>auction.bidRegister</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout_Admin</servlet-name>
        <servlet-class>auction.Logout_Admin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerRegister</servlet-name>
        <url-pattern>/CustomerRegister</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerLogin</servlet-name>
        <url-pattern>/CustomerLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>bidRegister</servlet-name>
        <url-pattern>/bidRegister</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout_Admin</servlet-name>
        <url-pattern>/Logout_Admin</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
